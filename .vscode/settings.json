{
  /* cSpell:disable */

  /* Debug */
  "debug.onTaskErrors": "debugAnyway",

  /* Diff Editor */
  "diffEditor.codeLens": true,
  "diffEditor.ignoreTrimWhitespace": false,

  /* Editor */
  /* Display */
  "editor.fontFamily": "Input Mono, Fira Code, '微软雅黑', monospace",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.fontSize": 16,
  "editor.rulers": [80],

  /* Formatter */
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "never",
    "source.organizeImports": "never"
  },
  "editor.formatOnSave": false,

  /* Custom Formatter */
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false
  },
  "[mdx]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[graphql]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[astro]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[rust]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "[toml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[shellscript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dockercompose]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[nginx]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  },

  /* Others */
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.mouseWheelZoom": true,
  "editor.quickSuggestions": {
    "strings": true,
    "comments": true
  },
  "editor.renderWhitespace": "boundary",
  "editor.snippetSuggestions": "top",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "onlySnippets",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true,
    "zh-hant": true
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "keyword",
          "storage.modifier",
          "storage.type.class.js",
          "storage.type.js"
        ],
        "settings": {
          "fontStyle": "italic bold"
        }
      },
      {
        "scope": ["keyword.control.conditional", "keyword.operator", "comment"],
        "settings": {
          "fontStyle": "bold"
        }
      }
    ]
  },

  /* Explorer */
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "dockerfile": ".dockerignore, docker-compose.*, dockerfile*",
    "readme.md": "authors, backers*, changelog*, citation*, code_of_conduct*, codeowners, contributing*, contributors*, copying, credits, governance.md, history.md, license*, maintainers, readme*, security.md, sponsors*, todo.md",
    "vite.config.*": "index.html, vercel.json, netlify.toml, .env.*, .env, postcss.config.*, tailwind.config.*",
    "next.config.*": "vercel.json, netlify.toml, .env.*, .env, postcss.config.*, tailwind.config.*, next-env.d.ts, components.json, turbo.json",
    "nuxt.config.*": "vercel.json, netlify.toml, .env.*, .env, postcss.config.*, tailwind.config.*",
    "astro.config.*": "vercel.json, netlify.toml, .env.*, .env, postcss.config.*, tailwind.config.*",
    "nest-cli.json": ".env.*, .env, ecosystem.config.*",
    "react-native.config.*": "metro.config.*, jest.config.*, Gemfile, Gemfile.lock, babel.config.*, .watchmanconfig, app.json, tamagui.config.*",
    "rspress.config.*": "vercel.json, netlify.toml",
    "package.json": "package-lock.json, pnpm-lock.yaml, pnpm-workspace.yaml, yarn.lock, .prettier*, .editorconfig, .eslint*, .stylelint*, .npmrc, .nvmrc, .lintstaged*, .cspell*, .commitlint*, .gitignore, .gitattributes, nodemon.json, .env*",
    "tsconfig.base.json": "tsconfig.*.json"
  },

  /* Extensions */
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,

  /* Files */
  "files.associations": {
    // "*.css": "css",
    "*.css": "tailwindcss",
    "*.cjs": "javascript",
    "*.mjs": "javascript",
    "*.mdx": "markdown",
    ".env*": "properties",
    "manifest.json": "jsonc", // uniapp 可以添加注释
    "pages.json": "jsonc" // uniapp 可以添加注释
  },
  "files.autoGuessEncoding": true,
  "files.eol": "\n", // 文件换行模式：默认选择 LF
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,

  /* Git Config */
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreRebaseWarning": true,
  "git.untrackedChanges": "separate",

  /* Search */
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  /* Security */
  "security.workspace.trust.untrustedFiles": "open",

  /* Terminal Config */
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,

  /* Window */
  "window.autoDetectColorScheme": true,
  "window.commandCenter": true,
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "window.nativeTabs": true, // Only works on MacOS

  /* Workbench */
  "workbench.colorTheme": "Dracula Soft",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.layoutControl.enabled": false,
  "workbench.panel.defaultLocation": "bottom",
  "workbench.preferredLightColorTheme": "Dracula Soft",
  "workbench.preferredDarkColorTheme": "Dracula",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.pinnedTabsOnSeparateRow": true,
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "left",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,

  /* ESLint */
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.quiet": false,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "astro",
    "svelte"
    // "html",
    // "markdown",
    // "json",
    // "jsonc",
    // "json5"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],

  /* Prettier */
  "prettier.enable": true,

  "prettier.arrowParens": "always",
  "prettier.bracketSameLine": false,
  "prettier.bracketSpacing": true,
  "prettier.embeddedLanguageFormatting": "auto",
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.jsxSingleQuote": false,
  "prettier.printWidth": 80,
  "prettier.proseWrap": "preserve",
  "prettier.quoteProps": "as-needed",
  "prettier.semi": false,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "none",
  "prettier.useTabs": false,

  // Vue
  "prettier.vueIndentScriptAndStyle": false,

  // Astro
  "prettier.documentSelectors": ["**/*.astro"],

  /* i18n ally */
  "i18n-ally.displayLanguage": "zh",
  "i18n-ally.extract.autoDetect": true,
  "i18n-ally.extract.keyMaxLength": 99999,
  "i18n-ally.annotationMaxLength": 20,
  "i18n-ally.sortKeys": true,
  "i18n-ally.theme.annotationMissing": "red",
  "i18n-ally.theme.annotationMissingBorder": "red",
  "i18n-ally.theme.annotation": "#6495ED",
  "i18n-ally.theme.annotationBorder": "#6495ED",

  /* GitHub Copilot */
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "yaml": false
  },

  /* CSpell */
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "cSpell.enableFiletypes": ["astro"],
  "cSpell.ignorePaths": ["**/*.code-workspace"],

  /* CSS */
  "css.lint.hexColorLength": "ignore",

  /* SCSS */
  "scss.lint.unknownAtRules": "ignore",

  /* Typescript */
  "typescript.tsdk": "node_modules\\typescript\\lib",

  /* Svelte */
  "svelte.enable-ts-plugin": true,

  /* Tailwind CSS */
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.classAttributes": [
    "class", // Vue
    "className", // React
    "ngClass", // Angular
    "class:list", // Astro
    "rootClassName" // antd
  ],

  /* Inline Fold */
  "inlineFold.autoFold": false,

  /* Azure */
  "azure.cloud": "AzureChinaCloud",

  /* Powermode */
  "powermode.combo.counterSize": 1,
  "powermode.combo.location": "off",
  "powermode.combo.timerEnabled": "show",
  "powermode.enabled": true,
  "powermode.shake.intensity": 1,
  "powermode.shake.enabled": false,

  /* Material Icon Theme */
  "material-icon-theme.activeIconPack": "nest",
  "material-icon-theme.folders.color": "#42a5f5",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.hidesExplorerArrows": false,
  "material-icon-theme.saturation": 1,

  /* TODO Highlight */
  "todohighlight.isEnable": true,
  "todohighlight.keywords": [
    {
      "text": "NOTE:",
      "color": "#fff",
      "backgroundColor": "#50c878",
      "isWholeLine": false
    },
    {
      "text": "TODO:",
      "color": "#000",
      "isWholeLine": false
    },
    {
      "text": "HACK:",
      "color": "#fff",
      "backgroundColor": "purple",
      "isWholeLine": true
    },
    {
      "text": "DEPRECATED:",
      "color": "#fff",
      "backgroundColor": "red",
      "isWholeLine": true
    }
  ],

  /* Error Lens */
  "errorLens.enabledDiagnosticLevels": ["error", "info", "warning"],

  /* Markdownlint */
  "markdownlint.config": {
    // 支持排序列表
    "MD004": false,
    // 不限制每行长度
    "MD013": {
      "line_length": 99999
    },
    // 不限制命令使用 $ 符号，而不输出
    "MD014": false,
    // 不限制标题重复
    "MD024": false,
    // 允许标题尾随标点符号
    "MD026": false,
    // 允许 HTML 标签
    "MD033": false,
    // 允许链接
    "MD034": false,
    // 不限制第一行为标题
    "MD041": false
  },
  "react-native-tools.showUserTips": false,
  "editor.codeActionWidget.includeNearbyQuickFixes": true
}
